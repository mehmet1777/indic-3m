        Returns: (bool, str) - (geÃ§ti_mi, aÃ§Ä±klama_mesajÄ±)
        """
        try:
            print(f"\nğŸš« SPAM KONTROLÃœ:")
            
            current_time = datetime.now()
            
            # Bu coin'den daha Ã¶nce sinyal gÃ¶nderilmiÅŸ mi?
            if coin in self.last_signal_times:
                last_signal_time = self.last_signal_times[coin]
                time_diff = (current_time - last_signal_time).total_seconds() / 60  # dakika
                
                print(f"Son sinyal: {time_diff:.1f} dakika Ã¶nce")
                
                # 30 dakikadan az sÃ¼re geÃ§miÅŸse

                    print(f"   En az 30 dakika beklenmeli")
                    return False, f"Son sinyal {time_diff:.0f} dk Ã¶nce"
                
                print(f"âœ… Spam OK: {time_diff:.1f} dakika geÃ§miÅŸ")
            else:
                print(f"âœ… Spam OK: Bu coin'den ilk sinyal")
            
            return True, "GÃ¼venli"
                
        except Exception as e:
